<taglib>
	<tlib-version>1.0</tlib-version>
	<jsp-version>2.0</jsp-version>
	<short-name>Table with bootstrap</short-name>

	<tag>
		<name>CTable</name>
		<tag-class>view.CustomTableTag</tag-class>
		<body-content>scriptless</body-content>

		<attribute>
			<name>columns</name>
			<required>true</required>
		</attribute>

		<attribute>
			<name>data</name>
			<required>true</required>
			<type>java.util.ArrayList</type>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>
</taglib>